<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary_color"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/title_top_margin"
            android:lineSpacingExtra="@dimen/title_line_space"
            android:padding="@dimen/small_padding"
            android:text="@string/how_to_first_title"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/title_font_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/text_line_space"
            android:padding="@dimen/small_padding"
            android:text="@string/how_to_first_info"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_font_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/title_top_margin"
            android:lineSpacingExtra="@dimen/title_line_space"
            android:padding="@dimen/small_padding"
            android:text="@string/how_to_second_title"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/title_font_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/text_line_space"
            android:padding="@dimen/small_padding"
            android:text="@string/how_to_second_info"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_font_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/title_top_margin"
            android:lineSpacingExtra="@dimen/title_line_space"
            android:padding="@dimen/small_padding"
            android:text="@string/how_to_third_title"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/title_font_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/text_line_space"
            android:padding="@dimen/small_padding"
            android:text="@string/how_to_third_info"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_font_size" />

    </LinearLayout>
</ScrollView>
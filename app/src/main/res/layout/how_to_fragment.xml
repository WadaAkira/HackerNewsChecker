<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_color">

    <TextView
        android:id="@+id/first_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title_top_margin"
        android:lineSpacingExtra="@dimen/title_line_space"
        android:padding="@dimen/small_padding"
        android:text="@string/how_to_first_title"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/title_font_size"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/first_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/text_line_space"
        android:padding="@dimen/small_padding"
        android:text="@string/how_to_first_info"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_font_size"
        app:layout_constraintTop_toBottomOf="@id/first_title" />

    <TextView
        android:id="@+id/second_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title_top_margin"
        android:lineSpacingExtra="@dimen/title_line_space"
        android:padding="@dimen/small_padding"
        android:text="@string/how_to_second_title"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/title_font_size"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/first_info" />

</androidx.constraintlayout.widget.ConstraintLayout>